<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:background="#eeeeee"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
     android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dph5"
        android:orientation="horizontal">


        <com.tupelo.wellness.view.NewTextView
            android:layout_marginLeft="@dimen/dph10"
            android:id="@+id/numberTxt"
            android:gravity="center"
            android:paddingRight="@dimen/dph2"
            android:paddingLeft="@dimen/dph2"
            android:layout_width="@dimen/dph16"
            android:textColor="@color/white"
            android:layout_height="@dimen/dph16"
            android:layout_gravity="center_vertical"
            android:text=""
            android:textSize="@dimen/sp13" />

        <ImageView
            android:id="@+id/leaderImg"
            android:layout_width="@dimen/dph50"
            android:layout_height="@dimen/dph50"
            android:layout_marginLeft="@dimen/dph10"
            android:src="@mipmap/square" />

        <com.tupelo.wellness.view.NewTextView
            android:id="@+id/leaderName"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:font="light"
            android:textColor="@color/date_hash"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dph10"
            android:gravity="center_vertical"
            android:text="Annal Simco"
            android:textSize="@dimen/sp16" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/dph10"
            android:layout_marginEnd="@dimen/dph5"
            android:gravity="center"

            android:orientation="vertical">

            <com.tupelo.wellness.view.NewTextView
                android:id="@+id/leaderSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black_light"
                app:font="regular"
                android:text="0"
                android:textStyle="bold"
                android:textSize="@dimen/sp17" />

            <com.tupelo.wellness.view.NewTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black_light"
                android:gravity="center"
                android:id="@+id/stepsLabel"
                android:text="STEPS"
                android:textSize="@dimen/sp9" />
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dph5"
        android:layout_marginRight="@dimen/dph5"
        android:background="#aba9a9"
        android:paddingRight="@dimen/dph5"
        android:layout_height="1dp"/>

    </LinearLayout>