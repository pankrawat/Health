<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_3dp"
        android:background="@mipmap/shadow">

        <RelativeLayout
            android:id="@+id/imageLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_260dp">

            <ImageView
                android:id="@+id/chalengeimageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_200dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:layout_marginRight="@dimen/margin_4dp"
                android:layout_marginTop="2dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/black_mask"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_200dp"
                android:layout_marginLeft="@dimen/margin_4dp"
                android:layout_marginRight="@dimen/margin_4dp"
                android:layout_marginTop="2dp"
                android:background="#60000000" />

            <com.tupelo.wellness.view.NewTextView
                android:id="@+id/cheaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginRight="@dimen/list_item_margin"
                android:layout_marginTop="@dimen/list_item_margin"
                android:gravity="center"
                android:text="@string/title"
                android:textAllCaps="true"
                android:textSize="@dimen/dashboard_steps"
                android:textColor="@color/white"/>

            <com.tupelo.wellness.view.NewTextView
                android:id="@+id/cDescTextView"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_140dp"
                android:layout_below="@+id/cheaderTextView"
                android:layout_marginLeft="@dimen/list_item_margin"
                android:layout_marginRight="@dimen/list_item_margin"
                android:gravity="top"
                android:text="Description"
                android:textSize="@dimen/dashboard_text"
                android:textColor="@color/white"/>

            <RelativeLayout
                android:id="@+id/ll_time"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/height_60dp"
                android:layout_below="@+id/chalengeimageView">

                <com.tupelo.wellness.view.NewTextView
                    android:id="@+id/textVie2"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="8dp"
                    android:text="START TIME"
                    android:textSize="13sp" />

                <com.tupelo.wellness.view.NewTextView
                    android:id="@+id/tv_starttime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/textVie2"
                    android:layout_toEndOf="@+id/textVie2"
                    android:layout_toRightOf="@+id/textVie2"
                    android:gravity="center"
                    android:text=""
                    android:textSize="13sp" />

                <com.tupelo.wellness.view.NewTextView
                    android:id="@+id/te7"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textVie2"
                    android:layout_toLeftOf="@+id/tv_endtime"
                    android:layout_toStartOf="@+id/tv_endtime"
                    android:text="END TIME"
                    android:textSize="13sp" />

                <com.tupelo.wellness.view.NewTextView
                    android:id="@+id/tv_endtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tv_starttime"
                    android:layout_alignStart="@+id/tv_starttime"
                    android:layout_alignTop="@+id/te7"

                    android:gravity="center"
                    android:text=""
                    android:textSize="13sp" />

                <com.tupelo.wellness.view.NewTextView
                    android:id="@+id/textV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_endtime"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/activity_vertical_margin"
                    android:gravity="bottom"
                    android:text="In Progress"
                    android:textColor="@color/green_progress"
                    android:textSize="13sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/tick"
                android:layout_width="@dimen/height_50dp"
                android:layout_height="@dimen/height_50dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/margin_35dp"
                android:layout_marginEnd="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_25dp"
                android:background="@drawable/tick_selector" />


        </RelativeLayout>


    </RelativeLayout>
</FrameLayout>